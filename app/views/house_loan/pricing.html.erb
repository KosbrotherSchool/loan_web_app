<section id="content">
		<div class="container">


			<div class="row">			
				<div class="span12">
					<h2>服務與收費</h2>
					<hr>
				</div>
			</div>

			<div class="row-fluid">

					<div class="span4 offset2">
						<div class="pricing-box-wrap special">
							<div class="pricing-heading">
								<h3><strong>我們的服務</strong></h3>
							</div>

							<div class="pricing-content">
								<ul>
									<li><i class="icon-ok"></i> 貸款疑問諮詢</li>
									<li><i class="icon-ok"></i> 房屋貸款估價</li>
									<li><i class="icon-ok"></i> 信貸條件評估</li>
									<li><i class="icon-ok"></i> 多家銀行條件篩選</li>
									<li><i class="icon-ok"></i> 銀行專員聯絡資訊 </li>
									<li><i class="icon-ok"></i> 申請者與專員媒合 </li>
								</ul>
							</div>

							<div class="pricing-terms">
								<h6>免費諮詢，核貸才收費</h6>
							</div>

						</div>
					</div>

					<div class="span4">
					<div class="pricing-box-wrap">
						<div class="pricing-heading">
							<h3><strong>詳細定價</strong></h3>
						</div>

						<div class="pricing-content">
							<ul>						
								<li><i class="icon-ok"></i> $2千 / 貸款100萬內</li>
								<li><i class="icon-ok"></i> $3千 / 貸款200萬內</li>
								<li><i class="icon-ok"></i> $4千 / 貸款400萬內</li>
								<li><i class="icon-ok"></i> $6千 / 貸款600萬內</li>
								<li><i class="icon-ok"></i> $8千 / 貸款800萬內</li>
								<li><i class="icon-ok"></i> $1萬 / 貸款1000萬內</li>
							</ul>
						</div>

						<div class="pricing-terms">
							<h6>$1萬 / 貸款1000萬以上</h6>
						</div>

					</div>
				</div>

			</div>

			<div class="row-fluid">

				

			</div>

			<div class="row" style="margin-bottom: 0px">
				<div class="span12">
					<div class="cta-box" style="background: #F5FAFF">
						<div class="row">
							<div class="span6">
								<div class="cta-text">
									<h2>立即 <span>免費</span> 申請諮詢
									</h2>
								</div>
							</div>
							<div class="span5">
								<div class="cta-btn">
									<%= link_to  apply_mortgage_path, :class => "btn btn-success" do %>
										房貸申請<i class="icon-angle-right"></i>
									<% end %>
									<%= link_to  apply_credit_loan_path, :class => "btn btn-primary", :style => "margin-top: 3px" do %>
										信貸申請<i class="icon-angle-right"></i>
									<% end %>
								</div>
							</div>							
						</div>
					</div>
				</div>	
			</div>

			<div class="row">
				<div class="span12">
					<div class="cta-box" style="background: #F5FAFF">
						<div class="row">
							<div class="span6">
								<div class="cta-text">
									<h2>直接加LINE諮詢</h2>
								</div>
							</div>
							<div class="span5">
								<div class="cta-btn">
									<div class="btn btn-medium btn-danger">LINE ID: ezbank-service</div>
								</div>
							</div>							
						</div>
					</div>
				</div>	
			</div>

		</div>
</section>
