<body>

<div id="wrapper">
	<section id="inner-headline">
		<div class="container">
			<div class="row-fluid">
				<div class="span12">
					<div class="inner-heading">
					<h2>房貸問題</h2>
					</div>
				</div>	
			</div>			
		</div>
	</section>
	
	<section id="content">
		<div class="container">
			<div class="row-fluid">

				<div class="span12">
					<h4 class="title"><strong>房貸</strong> 常見問題</h4>
					<!-- start: Accordion -->
					<div class="accordion" id="accordion2">

						<% Qa.where("type_id = 1").each_with_index do |qa, index| %>

							<div class="accordion-group">

								<% if index == 0 %>
									<div class="accordion-heading">
										<a class="accordion-toggle active" data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= index%>">
											<i class="icon-plus"></i>
											Q<%= index+1 %>. <%= qa.title %>？
										</a>
									</div>
									<div id="collapse<%= index %>" class="accordion-body collapse in">
										<div class="accordion-inner">
										  <%= qa.content.gsub(/\n/, '<br/>').html_safe %>
										</div>
									</div>
								<% else %>
									<div class="accordion-heading">
										<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= index%>">
											<i class="icon-plus"></i>
											Q<%= index+1 %>. <%= qa.title %>？
										</a>
									</div>
									<div id="collapse<%= index %>" class="accordion-body collapse">
										<div class="accordion-inner">
										  <%= qa.content.gsub(/\n/, '<br/>').html_safe %>
										</div>
									</div>
								<% end %>

							</div>

						<% end %>

					</div>
					<!--end: Accordion -->
					
					<div class="blankline30"></div>

				</div>	
			</div>


			
		</div>
	</section>

</div>
<a href="#" class="scrollup"><i class="icon-angle-up icon-square icon-bglight icon-2x active"></i></a>	

</body>