<div id="wrapper">
	<section id="inner-headline">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<div class="inner-heading">
					<h2>銀行房貸查詢</h2>
					</div>
				</div>	
			</div>			
		</div>
	</section>
    <section id="content">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<h5 class="widgetheading">銀行列表</h5>
					<hr>
					<ul class="unstyled bank-list" >
					    <li>
					    	<%= link_to("全部",join_us_path)%>
								<i class="icon-circled icon-bgdanger icon"><%= BankProduct.all.size %></i>
					    </li>
					    <% @banks.each do |bank|%>
					    	<li>
					    		<%= link_to(bank.name,"banks/#{bank.id}")%>
					    		<i class="icon-circled icon-bgdanger icon">
					    			<%= bank.bank_products.size %>
					    		</i>
					    	</li>
					    <% end %>	
					</ul>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
					<table class="table table-bordered table-striped table-hover">
					    <thead>
					    <tr>
						<th>
						    編號
						</th>
						<th>
						    銀行名稱
						</th>
						<th>
						    方案名稱
						</th>
						<th>
						    房貸利率
						</th>
						<th>
						    綁約
						</th>
						<th>
						    寬限期
						</th>
						<th>
						    貸款成數
						</th>
						<th>
						    其他貸款條件
						</th>
					    </tr>
					    </thead>
					  
					  <tbody>
					  	<% @banks.each do |bank|%>
					  		<% products = bank.bank_products %>
					  		<% products.each do |p|%>
						  		<tr>
						  			<td>
									    <%= p.id %>
										</td>
										<td>
									    <%= p.bank.name %>
										</td>
										
											<td>
											<%= link_to(root_path) do %>										
									     <%= p.title %>[詳細內容]
									     <% end %>
									   	</td>
										
										<td width="20%">
									    <%= p.interest %>
										</td>
										<td>
									    <%= p.binding %>
										</td>
										<td>
									    <%= p.grace_year %>
										</td>
										<td>
									    <%= p.portion %>
										</td>
										<td width="40%">
									    <%= p.other_info %>
										</td>
						  		</tr>
					  		<% end %>
					  	<% end %>	
					  </tbody>
					</table>
					<div class="cta-box">
						<div class="row-fluid">
							<div class="span12">
								<div class="cta-text">
									注意事項：本站所列資訊僅供參考，實際貸款條件請依各銀行提供之訊息為準。
								</div>
							</div>
													
						
						</div>
					</div>
					<div class="blankline30"></div>
				</div>	
			</div>
		</div>
	</section>

</div>