
<div id="wrapper">
	
	<%= render "devise/shared/nevigation_links" %>
	
	<section id="content">
		<div class="container">
			<div class="row">
				<h2>等待回覆案件</h2>
			</div>

			<div class="row">

				<table class="table" border=1>
						<tr>
							<td>申請填表時間</td>
							<td>申請人</td>
							<td>已回覆專員數/寄出專員數</td>
							<td>回覆率</td>
							<td>剩下幾天到期</td>
							<td>送出</td>
						</tr>
					<% @onlendings.where("status_id = 1").each do |f|%>
						<%= form_for f, :url => backstage_deliver_onlending_mail_path, html: {class: "form-horizontal"} do |form| %>
					 	<tr>
							<td><%= f.created_at.strftime("%m/%d/%y-%H:%M")%></td>
							<td>
								<%= link_to(root_path+"backstage/onlendings/#{f.id}", {:style => 'color: #09B3DD'}) do %>
									<%= f.applicant_name %>
								<% end %>
							</td>
							<%  num_responded = LenderOnlendingShip.where("onlending_id = #{f.id} and is_responded = true").size()%>
							<%  num_sended = LenderOnlendingShip.where("onlending_id = #{f.id}").size()%>
							
							<% if f.is_mailed_lenders == nil || f.is_mailed_lenders == false %>
								<td>
									<%= link_to(root_path+"backstage/onlendings/#{f.id}", {:style => 'color: #09B3DD'}) do %>
										尚未寄信
									<% end %>
								</td>
							<% else %>
								<td>
									<%= link_to(root_path+"backstage/onlendings/#{f.id}", {:style => 'color: #09B3DD'}) do %>
								 	<%= num_responded %> / <%= num_sended %>
								 	<% end %>
								</td>
							<% end %>						
							
							<% if num_responded == 0%>
								<td> 0%</td>
							<% elsif num_responded != 0 &&  num_responded == num_sended %>
								<td> 100%</td>
							<% else %>			
								<% percent = num_responded.to_d / num_sended * 100 %>
								<% ps = percent.to_s %>
								<td> <%= ps[0..1] %> %</td>
							<% end %>

							<% if (5 - (Time.now - f.created_at)/1.day) >= 0 %>
								<td>
									<%= (5 - (Time.now - f.created_at)/1.day).to_s[0..3]%> 天
								</td>
							<% else %>
								<td>
									已到期
								</td>
							<% end %>

							<input type="hidden" name="key" value=<%= f.id %>>
							<td><%= form.submit "送出回覆信" %></td>
						</tr>
						<% end %>
					<% end %>
				</table>			

			</div>

			<div class="row">
				<h2>評估中</h2>
			</div>

			<div class="row">

				<table class="table" border=1>
						<tr>
							<td>狀態更新時間</td>
							<td>送出回覆時間</td>
							<td>申請人</td>
							<td>申請人電話</td>
							<td>備註</td>
							<td>案件狀態</td>
							<td>送出</td>
						</tr>
					<% @onlendings.where("status_id = 2").each do |f|%>
						<%= form_for f, :url => backstage_update_evaluate_onlending_path , html: {class: "form-horizontal"} do |form| %>
					 	<tr>
							<td><%= f.updated_at.strftime("%m/%d/%y-%H:%M") %></td>
							<% if f.deliver_time != nil %>
								<td><%= f.deliver_time.strftime("%m/%d/%y-%H:%M") %></td>
							<% else %>
								<td></td>
							<% end %>
							<td>
								<%= link_to(root_path+"backstage/onlendings/#{f.id}", {:style => 'color: #09B3DD'}) do %>
									<%= f.applicant_name %>
								<% end %>
							</td>
							<td><%= f.applicant_phone %></td>
							<td><%= form.text_field :notes, :placeholder => f.notes, :class => "input-large"%></td>
							<td><%= form.select(:status, ['評估中','送件中', '核貸中','已核貸','失敗'], {:selected  => "評估中"}, { :class => 'span2'}) %></td>
							<input type="hidden" name="key" value=<%= f.id %>>
							<td><%= form.submit "送出" %></td>
						</tr>
						<% end %>
					<% end %>
				</table>			

			</div>

			<div class="row">
				<h2>送件中</h2>
			</div>

			<div class="row">

				<table class="table" border=1>
						<tr>
							<td>狀態更新時間</td>
							<td>送出回覆時間</td>
							<td>申請人</td>
							<td>申請人電話</td>
							<td>備註</td>
							<td>案件狀態</td>
							<td>核貸專員</td>
							<td>送出</td>
						</tr>
					<% @onlendings.where("status_id = 3").each do |f|%>
						<%= form_for f, :url => backstage_update_delivering_onlending_path , html: {class: "form-horizontal"} do |form| %>
					 	<tr>
							<td><%= f.updated_at.strftime("%m/%d/%y-%H:%M") %></td>
							<% if f.deliver_time != nil %>
								<td><%= f.deliver_time.strftime("%m/%d/%y-%H:%M") %></td>
							<% else %>
								<td></td>
							<% end %>
							<td>
								<%= link_to(root_path+"backstage/onlendings/#{f.id}", {:style => 'color: #09B3DD'}) do %>
									<%= f.applicant_name %>
								<% end %>
							</td>
							<td><%= f.applicant_phone %></td>
							<td><%= form.text_field :notes, :placeholder => f.notes, :class => "input-large"%></td>
							<td><%= form.select(:status, ['評估中','送件中', '核貸中','已核貸','失敗'], {:selected  => "送件中"}, { :class => 'span2'}) %></td>
							<td><%= form.select(:lender_id, Lender.all.collect {|p| [ p.name, p.id ] } ) %></td>
							<input type="hidden" name="key" value=<%= f.id %>>
							<td><%= form.submit "送出" %></td>
						</tr>
						<% end %>
					<% end %>
				</table>			

			</div>

			<div class="row">
				<h2>核貸中</h2>
			</div>

			<div class="row">

