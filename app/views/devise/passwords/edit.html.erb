<style type="text/css">
      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
</style>

<div id="wrapper">
<section id="content">
    <div class="container">
      <div class="form-signin">

				<h2>更新密碼</h2>

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
				  <%= devise_error_messages! %>
				  <%= f.hidden_field :reset_password_token %>

				  <div>
				  	<%= f.label :password, "新密碼" %>
				    <%= f.password_field :password, autofocus: true, autocomplete: "off",placeholder: "請輸入密碼" %>
				  </div>

				  <div>
				  	<%= f.label :password_confirmation, "確認新密碼" %>
				    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "請再次輸入密碼"  %></div>

				  <div><%= f.submit "更新密碼", class: "btn btn-medium btn-primary" %></div>
				<% end %>

				<%= render "devise/shared/links" %>

      </div>
    </div>
  </section>
</div>

