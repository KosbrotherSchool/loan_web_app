<div class="form-signin">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

	<h2 class="form-signin-heading">專員登入</h2>

   <div><%= f.label :email %>
	 <%= f.email_field :email, autofocus: true, placeholder: "請輸入Email信箱" %></div>

  <div><%= f.label "密碼" %>
	    <%= f.password_field :password, autocomplete: "off", placeholder: "請輸入密碼" %></div>

<!-- 
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
 -->

  <div><%= f.submit "登入", class: "btn btn-large btn-primary" %></div>

<% end %>

<%= render "devise/shared/links" %>

</div>

