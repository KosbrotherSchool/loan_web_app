<header>	
		<div class="top">

		</div>	
		<div class="container-fluid">
			

			<div class="row-fluid nomargin">
				<div class="span4">
					<div class="logo">
						<%= link_to(root_path) do %>
							<%= image_tag("img/logo_0.png") %>
						<% end %>
					</div>
				</div>
			<div class="span8">
				<div class="navbar navbar-static-top">
					<div class="navigation">
						<nav>
						<ul class="nav topnav">
								<% if action_name == "index" || action_name == "privacy" || action_name == "term"%>					
									<li class="dropdown active">
								<% else %>
									<li>
								<% end %>
										<%= link_to(root_path) do %>
											<i class="icon-home"></i>首頁
										<% end %>
									</li>
