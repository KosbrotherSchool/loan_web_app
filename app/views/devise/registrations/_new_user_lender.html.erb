<div class="form-signin">

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <h2 class="form-signin-heading">專員註冊</h2>

	  <div><%= f.label :email %>
	  <%= f.email_field :email, autofocus: true, placeholder: "Email address" %></div>

	  <div><%= f.label "密碼" %>
	    <%= f.password_field :password, autocomplete: "off", placeholder: "請輸入密碼" %></div>

	  <div><%= f.label "密碼確認" %>
	    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "請再次輸入密碼" %></div>

	  <div><%= f.submit "註冊", class: "btn btn-large btn-primary" %></div>

	<% end %>

	<%= render "devise/shared/links" %>

</div>
