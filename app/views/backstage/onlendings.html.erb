						<tr>
							<td>狀態更新時間</td>
							<td>申請人</td>
							<td>申請人電話</td>
							<td>銀行/壽險</td>
							<td>核貸專員</td>
							<td>專員電話</td>
							<td>備註</td>
							<td>案件狀態</td>
							<td>送出</td>
						</tr>
					<% @onlendings.where("status_id = 4").each do |f|%>
