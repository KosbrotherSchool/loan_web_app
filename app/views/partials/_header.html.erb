								<% else %>
									<li>
								<% end %>
										<%= link_to "申請新房貸", apply_mortgage_path %>
								</li>
								<% if action_name == "join_us" ||  action_name == "create_lender"%>					
									<li class="dropdown active">
								<% else %>
									<li>
								<% end %>
									<%= link_to "貸款專員申請加入", join_us_path %>
									</li>
								<% if action_name == "faq" %>					
									<li class="dropdown active">
								<% else %>
									<li>
								<% end %>
									<%= link_to "常見問題", faq_path %>
									</li>
								<% if action_name == "about_us" %>					
									<li class="dropdown active">
								<% else %>
									<li>
								<% end %>
									<%= link_to "關於我們", about_us_path %>
