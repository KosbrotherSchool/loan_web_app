<div id="wrapper">
	<section id="inner-headline">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<div class="inner-heading">
					<h2>我的增轉貸案件</h2>
					</div>
				</div>
			</div>			
		</div>
	</section>
	<section id="content">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span2">
					<%= render "user_lenders/nevigation_links2" %>
					<!--
					<div class="service-box aligncenter">
						<div class="">
							尚有點數：<i class="icon-circled icon-bgprimary icon ">3</i>
						</div>
						<span class="colored"><a href="">點此[獲得更多點數]</a></span>
					</div>
					
					<div class="service-box aligncenter">
						<h5 class="">點數說明</h5>
						<ul class="cat">
							<li>1件新房貸需求單=1點</li>
							<li>1件增轉貸需求單=1點</li>
							<li>取得潛在客戶聯絡資訊=1點</li>
						</ul>
					</div>
					-->
				</div>

				<div class="span10">
					<div class="tabs">
						<ul class="nav nav-tabs">		
							<% if user_lender_signed_in? %>
								
								<% if action_name == "user_cases" %>
									<li class="active">
								<% else %>
									<li>
								<% end %>
								<!--數字是待回覆的數量 -->
							  <%= link_to '新房貸申請(20)', root_path+"user_lenders/#{@lender.id}/user_cases" %></li> 

							  <% if action_name == "user_onlendings" %>
									<li class="active">
								<% else %>
									<li>
								<% end %>
							  <%= link_to '增轉貸申請(12)', root_path+"user_lenders/#{@lender.id}/user_onlendings" %></li>
							<% end %>
						</ul>
					</div>
					<% key = "+" %>
				  		<%	while key.index("+") %>
				    	<%		key = AES.encrypt(@lender.id.to_s, ENV["KEY"]) %>
				  		<%	end %>
				  	<!--
					<div class="row-fluid">
						<h4>尚未回覆案件</h4>
						<hr />
					</div>
					-->
					<h5 class="user-cases-h5">待回覆</h5>
					<hr >
					<table class="table table-striped">
						<thead>
						    <tr>
						    	<th>截止日期</th>
								<th>案件狀態</th>
								<th>申請人</th>
								<th>地址</th>
								<th>欲多貸金額</th>
								<th>回覆連結</th>
						    </tr>
						</thead>
						<tbody>						
						<% onlendings = @lender.onlendings.select {|l| l.deliver_time == nil} %>

						<% onlendings.each do |onlending| %>

							<% token = "+" %>
				    	<%	while token.index("+") %>
				      <% 		token = AES.encrypt(onlending.id.to_s, ENV["KEY"]) %>
				    	<%	end %>

							<tr>
								<td class="span2"><%= onlending.dead_time.strftime("%Y/%m/%d %H:%M") %></td>
								<td>待回覆</td>
								<td><%= onlending.applicant_name %></td>
								<td><%= onlending.address %></td>
								<td><%= onlending.more_loan_price %>萬</td>
								<td>
									<%= link_to root_path+"onlendings/#{onlending.id}/response?key=#{key}&token=#{token}" do %>
						    		<button class="btn btn-rounded btn-success">點此回覆</button>
						    		<% end %>
								</td>
							</tr>
						<% end %>
						</tbody>
					</table>

					<h5 class="user-cases-h5">已回覆</h5>
					<hr >
					<table class="table table-striped">
						<thead>
						    <tr>
						    	<th>截止日期</th>
								<th>案件狀態</th>
								<th>申請人</th>
								<th>聯絡電話</th>
								<th>地址</th>
								<th>欲多貸金額</th>
								<th>詳細資料</th>
						    </tr>
						</thead>
						<tbody>
						
						<% onlendings = @lender.onlendings.select {|l| l.deliver_time != nil} %>

						<% onlendings.each do |onlending| %>

							<% token = "+" %>
				    	<%	while token.index("+") %>
				      <% 		token = AES.encrypt(onlending.id.to_s, ENV["KEY"]) %>
				    	<%	end %>

							<tr>
								<td class="span2"><%= onlending.dead_time.strftime("%Y/%m/%d %H:%M") %></td>
								<td class="">已回覆</td>
								
								<td class=""><%= onlending.applicant_name %></td>
								<td class=""><a href="#" class="btn btn-warning btn-rounded">取得聯絡電話</a></td>
								<td><%= onlending.address %></td>
								<td class=""><%= onlending.more_loan_price %>萬</td>
								<td>
									<%= link_to root_path+root_path+"onlendings/#{onlending.id}/onlending_detail?key=#{key}&token=#{token}" do %>
						    		<button class="btn btn-rounded">詳細資料</button>
						    		<% end %>
								</td>
							</tr>
						<% end %>
						</tbody>
					</table>
				</div>

				
			</div>
		</div>
	</section>

</div>