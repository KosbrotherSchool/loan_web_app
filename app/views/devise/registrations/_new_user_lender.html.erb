<div class="form-signin">

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <h2 class="form-signin-heading">專員註冊</h2>

	  <div><%= f.label :email %>
	  <%= f.email_field :email, autofocus: true, placeholder: "Email address" %></div>

	  <div><label>LINE ID</label>
	    <%= text_field_tag 'line_id',"", :class => "form-signin",placeholder: "有填可快速回覆" %>
	  </div>

	  <div><%= f.label "密碼" %>
	    <%= f.password_field :password, autocomplete: "off", placeholder: "請輸入密碼" %>
	  </div>

	  <div><%= f.label "密碼確認" %>
	    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "請再次輸入密碼" %>
	  </div>

	  <div><%= f.submit "註冊", class: "btn btn-large btn-primary" %>
	  </div>

	<% end %>

	<%= render "devise/shared/links" %>

</div>

<div class="row">
	<div class="span12">
		<div class="cta-box" style="background: #F5FAFF">
			<div class="row">
				<div class="span6">
					<div class="cta-text">
						<h2>或上<span style="color:#0FDB46">LINE</span>敲小編，直接申請加入</h2>
					</div>
				</div>
				<div class="span5">
					<div class="cta-btn">
						<div class="btn btn-medium btn-danger">LINE ID:&nbsp;&nbsp;ezbank168</div>
					</div>
				</div>							
			</div>
		</div>
	</div>	
</div>
