							<% else %>
								<td><%= form.select(:is_feedbacked, ['是','否'], {:selected  => "是"}, { :class => 'span1'}) %></td>
							<% end %>
							<td><%= form.text_field :notes, :placeholder => f.notes, :class => "input-large"%></td>
							<td><%= form.select(:status, ['評估中','送件中', '核貸中','已核貸','失敗'], {:selected  => "已核貸"}, { :class => 'span2'}) %></td>
							<input type="hidden" name="key" value=<%= f.id %>>
							<td><%= form.submit "送出" %></td>
